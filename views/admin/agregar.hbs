<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo servicio</h4>
            <form action="/admin/servicios/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Contenido" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-info">Guardar</button>
                {{#if error}}
                    <p class="errorAutenticacion">{{message}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>